@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "Roles";
    Layout = "_LayoutAdmin";
}

<div class="text-danger" asp-validation-summary="ModelOnly"></div>
@if (TempData["message"] != null) { 
    <div class="alert alert-success">
        @TempData["message"]
    </div>
}

<table class="table table-bordered table-striped table-sm m-1 p-1">
    <tr>
        <th>Role Id</th>
        <th>Role Name</th>
        <th>Users</th>
        <th></th>
    </tr>

    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan="4" class="text-center">
                No Roles
            </td>
        </tr>
    }
    else
    {
        foreach (var role in Model)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
                <td identity-role="@role.Id"></td>
                <td>
                    <form asp-route-id="@role.Id" asp-action="Delete" method="post">
                        <button type="submit" class="btn btn-danger">Delete</button>

                        <a asp-action="Edit" asp-route-id="@role.Id" class="btn btn-primary">Edit</a>

                    </form>
                </td>
            </tr>
        }
    }

</table>

<a asp-action="Create" class="btn btn-primary">
    Create Role
</a>