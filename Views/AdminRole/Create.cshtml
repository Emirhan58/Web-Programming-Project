@model string
@{
    ViewData["Title"] = localizer["Create Role"];
    Layout = "_LayoutAdmin";
}

<form class="m-1 p-1" asp-action="Create" method="post">

    <div class="text-danger" asp-validation-summary="All"></div>

    <div class="form-group">
        <label form="name">@localizer["Role Name"]</label>
        <input name="name" class="form-control" />
    </div>

    <input type="submit" class="btn btn-primary" value="@localizer["Submit"]" />
    <a asp-action="Index" class="btn btn-danger">@localizer["Cancel"]</a>
</form>