@model Category
@{
    ViewData["Title"] = localizer["Update Category"];
    Layout = "_LayoutAdmin";
}

<form class="m-1 p-1" asp-action="UpdateCategory" method="post">

    <div class="text-danger" asp-validation-summary="All"></div>

    <div class="form-group">
        <label asp-for="Id"></label>
        <input asp-for="Id" class="form-control" disabled />
    </div>

    <div class="form-group">
        <label asp-for="Name">@localizer["Name"]</label>
        <input asp-for="Name" class="form-control" />
    </div>

    <input type="submit" class="btn btn-primary" value="@localizer["Submit"]" />
    <a asp-action="Categories" class="btn btn-danger">@localizer["Cancel"]</a>
</form>