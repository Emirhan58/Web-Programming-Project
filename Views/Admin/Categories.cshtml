@model IEnumerable<Category>
@{
    ViewData["Title"] = "Categories";
    Layout = "_LayoutAdmin";
}

<div class="text-danger" asp-validation-summary="ModelOnly"></div>

<table class="table table-bordered table-striped table-sm m-1 p-1">
    <tr>
        <th>Category Id</th>
        <th>Category Name</th>
        <th></th>
    </tr>

    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan="3" class="text-center">
                No Users
            </td>
        </tr>
    }
    else
    {
        foreach (var category in Model)
        {
            <tr>
                <td>@category.Id</td>
                <td>@category.Name</td>
                <td>
                    <form asp-route-id="@category.Id" asp-action="DeleteCategory" method="post">
                        <button type="submit" class="btn btn-danger">Delete</button>

                        <a asp-action="UpdateCategory" asp-route-id="@category.Id" class="btn btn-primary">Update</a>

                    </form>
                </td>
            </tr>
        }
    }

</table>

<a asp-action="CreateCategory" class="btn btn-primary">
    Create Category
</a>