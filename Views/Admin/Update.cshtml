@model ApplicationUser
@{
    ViewData["Title"] = localizer["Update User"];
    Layout = "_LayoutAdmin";
}

<form class="m-1 p-1" asp-action="Update" method="post">

    <div class="text-danger" asp-validation-summary="All"></div>

    <div class="form-group">
        <label asp-for="Id"></label>
        <input asp-for="Id" class="form-control" disabled />
    </div>

    <div class="form-group">
        <label for="Password">@localizer["Password"]</label>
        <input name="Password" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Email">@localizer["Email"]</label>
        <input asp-for="Email" class="form-control" />
    </div>
    <input type="submit" class="btn btn-primary" value="@localizer["Submit"]" />
    <a asp-action="Index" class="btn btn-danger">@localizer["Cancel"]</a>
</form>