@model RegisterModel
@{ 
    Layout = "_Layout2";
}

<section class="vh-100 bg-image" style="background-image: url(https://wallpapercave.com/wp/wp4426455.jpg);">
    <div class="mask d-flex align-items-center h-100 gradient-custom-3">
        <div class="container h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                    <div class="card" style="border-radius: 15px;">
                        <div class="card-body p-5">
                            <h5 class="text-uppercase text-center mb-5">@localizer["CreateAnAccount"]</h5>

                            <form asp-action="Register" method="post">

                                <div class="text-danger" asp-validation-summary="All"></div>

                                <div class="form-outline mb-4">
                                    <input asp-for="UserName" class="form-control form-control-lg" placeholder="@localizer["Username"]" />
                                </div>

                                <div class="form-outline mb-4">
                                    <input asp-for="Email" class="form-control form-control-lg" placeholder="@localizer["Email"]" />
                                </div>

                                <div class="form-outline mb-4">
                                    <input asp-for="Password" class="form-control form-control-lg" placeholder="@localizer["Password"]" />
                                </div>

                                <div class="form-outline mb-4">
                                    <input asp-for="ConfirmPassword" class="form-control form-control-lg" placeholder="@localizer["RepeatPassword"]" />
                                </div>

                                <div class="d-flex justify-content-center">
                                    <input type="submit" class="btn btn-success btn-block btn-lg gradient-custom-4 text-body" value="@localizer["Register"]" />
                                </div>

                                <p class="text-center text-muted mt-5 mb-0">@localizer["Have already an account?"] <a asp-action="Login" class="fw - bold text - body"><u>@localizer["LoginHere"]</u></a></p>

</form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>