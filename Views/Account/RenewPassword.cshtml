@model RegisterModel
@{ 
    Layout = "_Layout2";
    ViewBag.Title = "Renew Password";
}

<br />
<br />

<section class="vh-100 bg-image" style="background-image: url(https://wallpapercave.com/wp/wp4426455.jpg);">
    <div class="mask d-flex align-items-center h-100 gradient-custom-3">
        <div class="container h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                    <div class="card" style="border-radius: 15px;">
                        <div class="card-body p-5">
                            <h5 class="text-uppercase text-center mb-5">Please enter your new password</h5>

                            <form class="m-1 p-1" asp-action="RenewPassword" method="post">

                                <div class="text-danger" asp-validation-summary="All"></div>
                                <div class="form-group">
                                    <input type="hidden" asp-for="Email" value="@ViewBag.ForgotterEmail" />
                                    <input type="hidden" asp-for="UserName" value="1" />
                                </div>

                                <div class="form-group">
                                    <input asp-for="Password" class="form-control" placeholder="Password" />
                                </div>
                                <div class="form-group">
                                    <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password"/>
                                </div>
                                <input type="submit" class="btn btn-primary" value="Submit" />
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
