@{
    Layout = "_Layout2";
    ViewBag.Title = localizer["Confirm"];
}

<br />
<br />

<div class="alert alert-warning" id="previous">
    <strong>@localizer["Confirm Your Account"]</strong>
    <input type="submit" class="btn btn-warning" value="@localizer["Confirm"]" onclick="Verified()" />
</div>
<div class="alert alert-success" id="after">
    <strong><span class="glyphicon glyphicon-ok"></span>@localizer["Your Account Is Active Now"]</strong>
    <br />
    <a asp-action="Login" class="btn btn-primary">@localizer["Login"]</a>
</div>


    <script>
    $("#after").hide();

    function Verified() {
        $.ajax({
            type: "post",
            url: "/Account/RegisterConfirm",
            data: { 'regId': '@ViewBag.regID' },
            success: function (msg) {
                alert(msg);
            }
        })
        $("#previous").hide();
        $("#after").show();
    }
    </script>
