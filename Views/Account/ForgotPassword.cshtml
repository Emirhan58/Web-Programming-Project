@{
    Layout = "_Layout2";
    ViewBag.Title = localizer["Forgot Password"];
}

<section class="vh-100 bg-image" style="background-image: url(https://wallpapercave.com/wp/wp4426455.jpg);">
    <div class="mask d-flex align-items-center h-100 gradient-custom-3">
        <div class="container h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                    <div class="card" style="border-radius: 15px;">
                        <div class="card-body p-5">
                            <h5 class="text-uppercase text-center mb-5">@localizer["Please enter your Email adress"]</h5>

                            <form asp-action="ForgotPassword" method="post">

                                <div class="text-danger" asp-validation-summary="All"></div>

                                <div class="form-outline mb-4">
                                    <input id="Email" name="Email" class="form-control form-control-lg" placeholder="@localizer["Email"]" />
                                </div>
                                <div class="d-flex justify-content-center">
                                    <input type="submit" class="btn btn-success btn-block btn-lg gradient-custom-4 text-body" value="@localizer["Enter"]" />
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>